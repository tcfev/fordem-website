<style>
  section {
    width: 700px;
    display: flex;
    flex-direction: column;
    margin-top: 100px;
    margin-right: auto;
    margin-left: auto;
    margin-bottom: 100px;
    text-align: left;
  }
  h2 {
    font-size: 40px;
    font-weight: bold;
  }
  p {
    font-size: 16px;
    font-weight: bold;
    line-height: 1.7rem;
  }
  div {
    margin-top: 30px;
    display: flex;
    column-gap: 50px;
  }
  div > a {
    display: flex;
    align-items: center;
    column-gap: 10px;
  }

  @media (max-width: 600px) {
    section {
      width: 100%;
    }
    h2 {
      font-size: 7vw;
    }
    div {
      flex-direction: column;
    }
    div > a {
      margin-top: 10px;
    }
  }
</style>
